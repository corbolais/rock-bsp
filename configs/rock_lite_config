#board name
BOARD=rock_lite
BOARD_DIR=rock_lite
TYPECHIP=rk31

#can be emmc.img, nand.img or sdcard.img
IMAGE_TARGET=sdcard.img

#configuration for u-boot
SDBOOT_IMG=sdboot_rk3188.img
UBOOT_REPO="https://github.com/radxa/u-boot-rockchip.git"
UBOOT_REV=u-boot-rk3188-sdcard
UBOOT_DEFCONFIG=rk30xx
UBOOT_EXTRA=

#configuration for linux kernel
KERNEL_REPO="https://github.com/radxa/linux-rockchip.git"
KERNEL_REV=radxa-stable-3.0
KERNEL_DEFCONFIG=radxa_rock_pro_linux_hdmi_defconfig
KERNEL_EXTRA=

#initrd
INITRD_REPO="https://github.com/radxa/initrd.git"
INITRD_REV=master

#linux-boot.img second
BOOTIMG_SECOND=/dev/null

#rootfs URL
BOARD_ROOTFS=linaro-trusty-desktop.ext4
BOARD_ROOTFS_URL="http://dl.radxa.com/rock_lite/images/rootfs/linaro-trusty-desktop.ext4.xz"
